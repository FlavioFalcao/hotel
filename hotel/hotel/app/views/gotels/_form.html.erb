
<%= simple_form_for @gotel do |f| %>
  <% if @gotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gotel.errors.count, "error") %> prohibited this gotel from being saved:</h2>

      <ul>
      <% @gotel.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.file_field :image %>
  <%= f.input :room_description %>
  <%= f.input :price_for_room %>
  <%= f.input :breakfast, :collection => ['Yes','No'], :as => :radio %>
  <%= f.simple_fields_for :location_attributes  do |location_form| %>
  <%= location_form.input :country, :as => :string %>
  <%= location_form.input :state %>
  <%= location_form.input :city %>
  <%= location_form.input :street %>
  <% end %>
  <%= f.button :submit %>
<% end %>