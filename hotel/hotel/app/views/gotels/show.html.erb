<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @gotel.title %>
</p>
<p><%= @gotel.average_rating %></p>

<div>
  <b>Image:</b>
  <%= image_tag @gotel.image_url.to_s %>
</div>
<p>
  <b>Room description:</b>
  <%= @gotel.room_description %>
</p>

<p>
	<b>Breakfast included? </b>
	<%= @gotel.breakfast %>
</p>
<p>
	<b>Price for room </b>
	<%= number_to_currency (@gotel.price_for_room) %>
</p>
<p>
	<%= @gotel.location.country %>
</p>
<p>
	<%= @gotel.location.state %>
</p>
<p>
	<%= @gotel.location.city %>
</p>
<p>
	<%= @gotel.location.street %>
</p>
<%= render "rating" %>


<br />
